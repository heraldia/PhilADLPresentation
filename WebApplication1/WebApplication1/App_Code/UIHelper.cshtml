        {
            result.Append("<img src = \"../../ADLImage/shop.png\" height = '50' width = '50' />");
        }
        return new HtmlString(result.ToString());
    }

    public static IHtmlString Clock(string timeStr)
    {
        string hour = timeStr.Substring(0, 2);
        string result = "<img src = \"../../ADLImage/clock/"+hour+".png\" height = '50' width = '50' />";
        return new HtmlString(result.ToString());
    }
