        }
        if (actionStr.IndexOf("Still") > -1)
        {
            result.Append("<img src = \"../../ADLImage/still.png\" height = '50' width = '50' />");
        }
        if (actionStr.IndexOf("another") > -1)
        {
            result.Append("<img src = \"../../ADLImage/p2.jpg\" height = '50' width = '50' />");
        }
        if (actionStr.IndexOf("Watch") > 0)
