        {
            result.Append("<img src = \"../../ADLImage/p2.jpg\" height = '50' width = '50' />");
        }
        if (actionStr.IndexOf("shop") > 0)
        {
            result.Append("<img src = \"../../ADLImage/shop.png\" height = '50' width = '50' />");
        }
        if (actionStr.IndexOf("Wash") > -1)
