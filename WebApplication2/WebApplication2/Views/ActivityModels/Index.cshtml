@model IEnumerable<WebApplication1.Models.ActivityModels> 

@{ ViewBag.Title = "Index"; Layout = "~/Views/Shared/_Layout.cshtml"; } 

<link rel="stylesheet" type="text/css" href="~/Content/here.css" /> 
<script type="text/javascript" src="~/Scripts/app/clock.js"></script>

<h2>Index </h2> 
